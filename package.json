{
  "name": "webdriverio_v5_typescript",
  "version": "1.0.0",
  "description": "Boilerplate project using version 5 WebdriverIO & TypeScript.",
  "repository": "https://github.com/jpolley/WebdriverIO_v5_TypeScript",
  "scripts": {
    "selenium": "docker-compose up -d",
    "selenium:vnc": "docker-compose -f docker-compose.vnc.yml up -d",
    "selenium:stop": "docker-compose down -v",
    "test-watch": "wdio run ./wdio.conf.js --watch",
    "lint": "tslint --fix 'test/**/*.ts' && tslint --fix 'src/**/*.ts'",
    "test": "./node_modules/.bin/cross-env VNC_SUPPORT=false DEBUG_TEST=true npm run test:run:local",
    "test:vnc": "./node_modules/.bin/cross-env VNC_SUPPORT=true DEBUG_TEST=true npm run test:run:local",
    "test:run:local": "npm run report:clean && npm run test:run && npm run report || npm run report",
    "test:run": "node ./node_modules/@wdio/cli/bin/wdio.js --spec",
    "report": "node ./cucumber.report.conf.js",
    "report:clean": "rimraf ./report",
    "ci:build": "docker-compose -f docker-compose.ci.yml build",
    "ci": "docker-compose -f docker-compose.ci.yml up --force-recreate --renew-anon-volumes --abort-on-container-exit --exit-code-from node"
  },
  "author": "Jeremy Polley",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/node": "^14.14.22",
    "@wdio/allure-reporter": "^6.11.0",
    "@wdio/cli": "^6.12.1",
    "@wdio/cucumber-framework": "^6.11.1",
    "@wdio/firefox-profile-service": "^6.10.6",
    "@wdio/local-runner": "^6.12.1",
    "@wdio/mocha-framework": "^6.11.0",
    "@wdio/selenium-standalone-service": "^6.12.1",
    "@wdio/spec-reporter": "^6.11.0",
    "@wdio/sync": "^6.11.0",
    "allure-commandline": "^2.13.8",
    "chai": "^4.2.0",
    "chromedriver": "^88.0.0",
    "cross-env": "^7.0.3",
    "cucumber-tag-expressions": "^2.0.3",
    "dotenv": "^8.2.0",
    "multiple-cucumber-html-reporter": "^1.18.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7",
    "wdio-chromedriver-service": "^6.0.4",
    "wdio-cucumberjs-json-reporter": "^2.0.2",
    "webdriverio": "^6.12.1"
  }
}
